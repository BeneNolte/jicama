<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-6 my-3">
      <div class="form my-5">

        <div class="card-style" >
          <div class="google-login">
            <%= image_tag image_path('Google.png') %>
            <%= render "devise/shared/omniauth" %>
          </div>
          <br>
          <p class="separator middleblacktitle">Jicama account</p>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
                          <%= render "devise/shared/forgot_password" %>
                          <br>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions" style="display: flex; align-items: center; justify-content: center;">
              <div class= "small-button" style="border-radius: 50px; width: 160px;">
                <%= f.button :submit, "Log in" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
