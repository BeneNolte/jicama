<div class="content-wrapper-with-bottombar">
  <div class="container", style="height: 80%;">
    <div class="row" style="height: 100%; padding-bottom: 10px;">
      <div class="col-12 col-lg-6" style="display: flex; flex-direction: column">

        <h1>Dashboard</h1>

        <div class="privacy-score">
          <div class="display-score">
            <p class="whitetext">Privacy score</p>
            <p class="whitetext">Overall</p>
          </div>
          <div class="display-score" style="margin-right: 100px">
            <h1 class="fatwhitetitle">Good</h1>
            <p class="whitetext">+5%</p>
          </div>
          <div class="meter">
            <span style="width: 70%"></span>
            <p class="whitetext">70</p>
          </div>
          <p class="whitetext">Since September</p>
        </div>

        <div class="d-flex justify-content-between my-1">
          <h4 class="greysubtitle">Data valuation</h4>
          <%= link_to "Details" %>
        </div>

        <div class="data-valuation">
          <div class="data-valuation-details" style="margin-bottom: 5%">
            <div class="data-valuation-logo">
              <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="data-valuation-values">
              <p class="greytext">Data value</p>
              <h4 class="purpletitle">€860,63</h4>
            </div>
            <p class="greytext">September</p>
          </div>

          <div class="data-valuation-details" style="margin-bottom: 5%">
            <div class="data-valuation-logo">
              <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="data-valuation-values">
              <p class="greytext">Value recovered</p>
              <h4 class="purpletitle">€0,00</h4>
            </div>
            <p class="greytext">September</p>
          </div>

          <div class="data-valuation-details">
            <div class="data-valuation-logo">
              <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="data-valuation-values">
              <p class="greytext">Companies restricted</p>
              <h4 class="purpletitle">0</h4>
            </div>
            <p class="greytext">All time</p>
          </div>
        </div>

        <!-- Button trigger modal -->
        <div class="long-button" data-toggle="modal" data-target="#exampleModal">
          <i class="fab fa-get-pocket"></i>
          <h4 class="purpletitle">Privacy cockpit</h4>
        </div>

      </div>
    </div>
  </div>

  <div class="container">
    <h4 class="greysubtitle">Connect Datasources</h4>
  </div>

  <div class="carousel">
    <div class="datasource-selection">
      <div class="<%= 'non-downloaded-style' if @google.downloaded == false %> logo-design">
        <%= cl_image_tag("jicama/google_logo.png") %>
      </div>
      <div class="<%= 'non-downloaded-style' if @facebook.downloaded == false %> logo-design">
        <%= cl_image_tag("jicama/facebook_logo.png") %>
      </div>
      <div class="<%= 'non-downloaded-style' if @twitter.downloaded == false %> logo-design">
        <%= cl_image_tag("jicama/twitter_logo.png") %>
      </div>
      <div class="<%= 'non-downloaded-style' if @spotify.downloaded == false %> logo-design">
        <%= cl_image_tag("jicama/spotify_logo.png") %>
      </div>
      <div class="<%= 'non-downloaded-style' if @instagram.downloaded == false %> logo-design">
        <%= cl_image_tag("jicama/instagram_logo.png") %>
      </div>
    </div>
  </div>
       
</div>

<%= render 'shared/bottombar', datasource: @google %>


 <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Privacy cockpit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'button' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Ask for information</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Save changes</button>
        <button type="button" class="btn btn-primary">Close</button>
      </div>
    </div>
  </div>
</div>
